pkgname=ghc-7.10.2
stow_opts="--ignore=bin/ghc --ignore=bin/ghci --ignore=bin/ghc-pkg --ignore=bin/haddock --ignore=bin/hp2ps --ignore=bin/hpc --ignore=bin/hsc2hs --ignore=bin/runghc --ignore=bin/runhaskell --ignore=share"

function build() {
    wget "http://downloads.haskell.org/~ghc/7.10.2/ghc-7.10.2-x86_64-unknown-linux-deb7.tar.xz"
    tar xf "ghc-7.10.2-x86_64-unknown-linux-deb7.tar.xz"
    cd "ghc-7.10.2"

    ./configure --prefix=$GRPDIR
    make DESTDIR=.installed install
    mv .installed/$GRPDIR $PKGDIR

    # Rename un-versioned binaries
    mv $PKGDIR/bin/hp2ps  $PKGDIR/bin/hp2ps-7.10.2
    mv $PKGDIR/bin/hpc    $PKGDIR/bin/hpc-7.10.2
    mv $PKGDIR/bin/hsc2hs $PKGDIR/bin/hsc2hs-7.10.2

    ln -s $PKGDIR/bin/hp2ps-7.10.2  $PKGDIR/bin/hp2ps
    ln -s $PKGDIR/bin/hpc-7.10.2    $PKGDIR/bin/hpc
    ln -s $PKGDIR/bin/hsc2hs-7.10.2 $PKGDIR/bin/hsc2hs
}
